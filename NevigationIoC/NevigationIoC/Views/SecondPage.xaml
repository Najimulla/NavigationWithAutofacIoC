<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NevigationIoC.Views.SecondPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" Padding="20">
            <Label Text="{Binding ValueToChange}" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding ValueToChangeIndirectly}" HorizontalTextAlignment="Center"/>
            <Button Text="{Binding IncrementButtonText}" Command="{Binding IncrementValueCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>